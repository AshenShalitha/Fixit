<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_client_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/home"
    tools:context="com.example.slash.fixit_2.SupervisorPkg.ClientHome">

    <Button

        android:id="@+id/projects"
        android:layout_marginStart="20dp"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:alpha="0.5"
        android:background="@drawable/documents"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROJECTS"
        android:ems="10"
        android:id="@+id/project_text"
        android:textColor="#B2BEB5"
        android:layout_marginTop="135dp"
        android:layout_alignEnd="@+id/projects"
        android:layout_alignStart="@+id/projects"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_alignRight="@+id/projects"
        android:layout_alignLeft="@+id/projects" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE PROJECT"
        android:ems="10"
        android:id="@+id/createProject_text"
        android:textColor="#B2BEB5"
        android:textAlignment="center"
        android:textSize="13dp"
        android:layout_alignStart="@+id/createProject"
        android:layout_alignTop="@+id/project_text"
        android:layout_alignBottom="@+id/project_text"
        android:layout_alignEnd="@+id/createProject"
        android:layout_alignLeft="@+id/createProject"
        android:layout_alignRight="@+id/createProject" />

    <Button

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/companies"
        android:alpha="0.5"
        android:layout_marginTop="40sp"
        android:layout_below="@+id/createProject"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/picasa"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPANY"
        android:ems="10"
        android:id="@+id/editText3"
        android:textColor="#B2BEB5"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_marginTop="295dp"
        android:layout_alignStart="@+id/createProject"
        android:layout_alignEnd="@+id/createProject"
        android:layout_alignLeft="@+id/createProject"
        android:layout_alignRight="@+id/createProject" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MESSAGE"
        android:ems="10"
        android:id="@+id/editText2"
        android:textColor="#B2BEB5"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_marginTop="295dp"
        android:layout_alignStart="@+id/message"
        android:layout_alignEnd="@+id/message"
        android:layout_alignLeft="@+id/message"
        android:layout_alignRight="@+id/message" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/message"
        android:alpha="0.5"
        android:layout_alignStart="@+id/project_text"
        android:layout_alignTop="@+id/companies"
        android:layout_alignBottom="@+id/companies"
        android:background="@drawable/im"
        android:layout_alignLeft="@+id/project_text" />

    <Button
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/profile"
        android:alpha="0.5"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="13dp"
        android:background="@drawable/contact"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileText"
        android:text="PROFILE"
        android:ems="10"
        android:textColor="#B2BEB5"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_below="@+id/profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/aboutUs"
        android:background="@drawable/bell1"
        android:alpha="0.5"
        android:layout_alignTop="@+id/profile"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTIFICATIONS"
        android:ems="10"
        android:textColor="#B2BEB5"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_alignBottom="@+id/profileText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/profileText"
        android:layout_marginBottom="1dp"/>

    <Button

        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/createProject"
        android:background="@drawable/add5"
        android:alpha="0.5"
        android:rotation="0"
        android:layout_above="@+id/createProject_text"
        android:layout_alignLeft="@+id/companies"
        android:layout_alignStart="@+id/companies" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logoutBTN"
        android:background="@drawable/logout1"
        android:layout_marginTop="30dp"
        android:layout_below="@id/profile"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@id/logoutBTN"
        android:layout_centerHorizontal="true"
        android:textColor="#B2BEB5"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
