<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employee_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/employee_home"
    tools:context="com.example.slash.fixit_2.EmployeePkg.EmployeeHome">

    <Button

        android:id="@+id/projects"
        android:layout_marginStart="20dp"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:alpha="0.5"
        android:background="@drawable/documents"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROJECTS"
        android:ems="10"
        android:id="@+id/project_text"
        android:textColor="#111111"
        android:layout_marginTop="135dp"
        android:textAlignment="center"
        android:textSize="14dp"
        android:background="#55ffffff"/>

    <Button

        android:id="@+id/profile"
        android:layout_height="110dp"
        android:layout_width="120dp"
        android:alpha="0.5"
        android:background="@drawable/contact"
        android:layout_alignTop="@+id/projects"
        android:layout_alignLeft="@+id/company"
        android:layout_alignStart="@+id/company" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:ems="10"
        android:id="@+id/profile_text"
        android:textColor="#111111"
        android:layout_marginTop="135dp"
        android:textAlignment="center"
        android:textSize="14dp"
        android:paddingLeft="20dp"
        android:layout_toRightOf="@id/project_text"
        android:background="#55ffffff"/>

    <Button
        android:id="@+id/messages"
        android:layout_marginStart="20dp"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:alpha="0.5"
        android:background="@drawable/im"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/project_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MESSAGES"
        android:ems="10"
        android:id="@+id/message_text"
        android:textColor="#111111"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_below="@id/messages"
        android:background="#55ffffff"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPANY"
        android:ems="10"
        android:id="@+id/company_text"
        android:textColor="#111111"
        android:textAlignment="center"
        android:paddingLeft="25dp"
        android:textSize="14dp"
        android:background="#55ffffff"
        android:layout_below="@id/company"
        android:layout_toRightOf="@id/message_text"/>

    <Button
        android:id="@+id/notifications"
        android:layout_marginStart="20dp"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:alpha="0.5"
        android:background="@drawable/bell1"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/message_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTIFICATIONS"
        android:ems="10"
        android:id="@+id/notification_text"
        android:textColor="#111111"
        android:textAlignment="center"
        android:textSize="14dp"
        android:background="#55ffffff"
        android:layout_below="@id/notifications"/>



    <Button

        android:id="@+id/company"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:alpha="0.5"
        android:background="@drawable/picasa"
        android:layout_above="@+id/message_text"
        android:layout_alignRight="@+id/company_text"
        android:layout_alignEnd="@+id/company_text"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />


    <Button
        android:id="@+id/logout"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:alpha="0.5"
        android:background="@drawable/logout"
        android:layout_above="@+id/notification_text"
        android:layout_alignRight="@+id/company"
        android:layout_alignEnd="@+id/company" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:ems="10"
        android:id="@+id/logout_text"
        android:textColor="#111111"
        android:textAlignment="center"
        android:textSize="14dp"
        android:paddingLeft="35dp"
        android:background="#55ffffff"
        android:layout_below="@id/logout"
        android:layout_toRightOf="@+id/notification_text"/>


</RelativeLayout>
