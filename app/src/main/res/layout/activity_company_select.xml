<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#55384047"
    tools:context="com.example.slash.fixit_2.LoginAndSignupPkg.CompanySelect">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl1"
        android:background="#384047">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="SELECT COMPANY"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/selectCompany"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/companyList"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:dividerHeight="0.1dp"
        android:divider="#0000CC"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/rl1"
        android:layout_marginTop="25dp">
    </ListView>

</RelativeLayout>
